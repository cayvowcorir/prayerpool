{{!< default}}
<div>
	{{# each data.prayeritems}}
	<div class="row">
		<div class="col s12 l12 m12">
			<div class="card z-depth-0">
				<div class="card-content">
					<span class="card-title">{{title}}</span>
					<div class="row">
						<span class="col s5">Requested by: </span>
						<div class="right-align">
						<span >Date: {{createdAt}} </span>
						</div>
					</div>		
					<p>Description: </p>
					<p>{{description}}</p>
					<br>

					<div class="right-align">
					<a id="addToCart" class="waves-effect clickable waves-teal btn-flat" onclick="addToCart('{{id}}')" ><img id="cartAdd_img" src="/images/add.png"></img>Add to Prayer Cart</a>
					</div>
				</div>
				<div class="card-action">
					<div class="well">
						
					</div>										
				</div>
			</div>
		</div>
	</div>
	{{/each}}
</div>
