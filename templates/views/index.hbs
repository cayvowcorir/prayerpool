{{!< default}}
<div class="container">
	{{# each data.prayeritems}}
	<div class="row">
		<div class="col s12 l12 m12">
			<div class="card z-depth-0">
				<div class="card-content">
					<span class="card-title">{{title}}</span>
					<div class="row">
						<span class="col s5">Requested by: </span>
						<span class="col s7">Date: {{createdAt}} </span>
					</div>		
					<p>Description: </p>
					<p>{{description}}</p>
				</div>
				<div class="card-action">
					<a class="btn  btn-default" href=""><img id="cartAdd_img" src="/images/comment.png"></img>Comment</a>
					<button onclick="addToCart();" class="btn  btn-default"><img id="cartAdd_img" src="/images/add.png"></img>Add to Prayer Cart</button>					
				</div>
			</div>
		</div>
	</div>
	{{/each}}
</div>
