		<div id="body">
			<!--
				Flash messages allow you to display once-off status messages to users, e.g. form
				validation errors, success messages, etc
			-->
			{{#if messages}}
			<div id="flash-messages" class="container">
				{{#if messages.info}}
				<div class="alert alert-info">
				<script type="text/javascript">toastInfo('{{flashMessages messages.info}}');</script>
				</div>
				{{/if}}
				{{#if messages.success}}
				<div class="alert alert-success">
				<script type="text/javascript">toastSuccess('{{flashMessages messages.success}}');</script>
				</div>
				{{/if}}
				{{#if messages.warning}}
				<div class="alert alert-warning">
				<script type="text/javascript">toastWarning('{{flashMessages messages.warning}}');</script>
				</div>
				{{/if}}
				{{#if messages.error}}
				<div class="alert alert-danger">
				<script type="text/javascript">toastError('{{flashMessages messages.error}}');</script>
				</div>
				{{/if}}
			</div>
			{{/if}}
			<!-- The content block should contain the body of your template's content-->
			<div class="container">
				<div class="row">
					<div id="side_bar" class="col l2">
						<a href="/prayer-request/">New Prayer Request</a>
					</div>
					<div class="col l10">
						{{{body}}}
					</div>
				</div>
			</div>
			
			
